<p id="notice"><%= notice %></p>

<div class='clock'>
  <p id='day-of-week'></p>
  <p id='date'></p>
  <p id='time'></p>
</div>

<div class='message'>
  <ul>
    <% @board.message.each_line do |line| %>
      <% next if line.strip.empty? %>
      <li><%= line %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_board_path(@board) %>
