<div class='clock'>
  <p><span id='day-of-week'></span></p>
  <p><span id='time'></span></p>
  <p><span id='date'></span></p>
</div>

<div class='message'>
  <ul>
    <% @board.message.each_line do |line| %>
      <% next if line.strip.empty? %>
      <li><%= line %></li>
    <% end %>
  </ul>
</div>

